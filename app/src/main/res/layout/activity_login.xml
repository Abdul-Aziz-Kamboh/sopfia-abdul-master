<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_temp_testing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    tools:mContext="com.outstarttech.kabir.property.activities.">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/sopfialogo"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_above="@+id/loginButtonLoginScreen"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Authorization"
                android:fontFamily="@font/montb"
                android:textSize="32sp"
                android:textColor="@android:color/white"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="of your"
                    android:fontFamily="@font/montb"
                    android:textSize="20sp"
                    android:textColor="@android:color/darker_gray">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/montb"
                    android:textSize="20sp"
                    android:textColor="@color/colorMagenta">
                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:paddingStart="20dp"
                    android:padding="8dp"
                    android:ems="10"
                    android:drawableStart="@drawable/emailiconsize"
                    android:textSize="14sp"
                    android:drawablePadding="15dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/roundempty"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:maxLines="1" />



                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="#FFFFFF"
                    android:ems="10"
                    android:hint="Password"
                    android:drawableStart="@drawable/passiconsize"
                    android:drawablePadding="15dp"
                    android:paddingStart="20dp"
                    android:padding="8dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:inputType="textPassword|textNoSuggestions"
                    android:background="@drawable/roundempty"
                    android:maxLines="1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remember Me"
                        android:padding="5dp"
                        android:buttonTint="@android:color/darker_gray"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:textColor="@android:color/darker_gray">

                    </CheckBox>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/notuser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not a user?"
                            android:fontFamily="@font/montbn"
                            android:textSize="13sp"
                            android:layout_marginRight="7dp"
                            android:textColor="@android:color/darker_gray"/>

                        <TextView
                            android:id="@+id/bReset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SignUp"
                            android:fontFamily="@font/montb"
                            android:textSize="13sp"
                            android:textColor="@color/colorMagenta"/>

                    </LinearLayout>



                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp">



                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/fingerPrintSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHighlight="@color/colorMagenta"
                        android:textColorLink="@color/colorMagenta"
                        android:fontFamily="@font/montb"
                        android:textColor="@android:color/darker_gray"
                        android:text="Enable Fingerprint Login"
                        android:theme="@style/CustomSwitchTheme"
                        android:textSize="16sp">






                    </androidx.appcompat.widget.SwitchCompat>


                </LinearLayout>

            </LinearLayout>




        </LinearLayout>




        <Button
            android:layout_above="@+id/or"
            android:id="@+id/loginButtonLoginScreen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/circlenotempty"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/md_white"
            android:layout_gravity="center"
            android:text="Login"
            android:fontFamily="@font/montb"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/or"
            android:layout_above="@+id/skipLogin"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="@android:color/darker_gray"
            android:layout_centerHorizontal="true"></TextView>

        <Button
            android:id="@+id/skipLogin"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/circleempty"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/md_white"
            android:layout_gravity="center"
            android:text="Skip Login"
            android:fontFamily="@font/montb"
            android:textAllCaps="true"/>


    </RelativeLayout>









</LinearLayout>