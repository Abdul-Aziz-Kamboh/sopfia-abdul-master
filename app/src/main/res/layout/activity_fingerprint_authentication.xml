<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/bg"
tools:context="com.outstarttech.kabir.property.activities.FingerprintAuthentication">

<LinearLayout
    android:id="@+id/headingLabel1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/headingLabel"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fingerprint Authentication"
        android:fontFamily="@font/montb"
        android:textSize="37sp"
        android:textColor="@android:color/white"></TextView>



</LinearLayout>

<ImageView
    android:id="@+id/fingerprintImage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp"
    android:layout_below="@+id/headingLabel1"
    android:layout_centerHorizontal="true"
    app:srcCompat="@drawable/fingerprinticon" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place your finger on "
            android:fontFamily="@font/montb"
            android:textSize="20sp"
            android:textColor="@android:color/darker_gray">
        </TextView>

        <TextView
            android:id="@+id/paraLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fingerprint Scanner"
            android:fontFamily="@font/montb"
            android:textSize="25sp"
            android:textColor="@color/colorMagenta">
        </TextView>


    </LinearLayout>
</RelativeLayout>