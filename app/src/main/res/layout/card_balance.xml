<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cv_item_balance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/appCreditDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/account_balance"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="0dp">


            <ImageView
                android:layout_width="180px"
                android:layout_height="180px"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/sopfialogocredits">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="left"
                    android:text="Credits"
                    android:gravity="left"
                    android:fontFamily="@font/montbn"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/appCreditVal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_marginTop="0dp"
                    android:text="000000"
                    android:layout_marginBottom="10dp"
                    android:gravity="left"
                    android:textColor="@android:color/white"/>

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:id="@+id/ethmnyTokenDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/account_balance"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:paddingTop="0dp">


            <ImageView
                android:layout_width="110px"
                android:layout_height="110px"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ethmnylogobalance">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="left"
                    android:text="ETHMNY"
                    android:gravity="left"
                    android:fontFamily="@font/montbn"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/tokenBalanceVal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_marginTop="0dp"
                    android:text="000000"
                    android:layout_marginBottom="10dp"
                    android:gravity="left"
                    android:textColor="@android:color/white"/>

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


</LinearLayout>
